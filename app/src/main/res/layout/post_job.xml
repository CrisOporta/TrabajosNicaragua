<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="152dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:src="@drawable/post_job_icon"
        app:layout_constraintBottom_toTopOf="@+id/editTextTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="385dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Nombre del empleo"
        android:inputType="text"
        android:padding="12dp"
        android:paddingBottom="4dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewIcon" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Descripción del empleo"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="316dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/job_categories"
        android:hint="Categoría del empleo"
        android:padding="12dp"
        android:prompt="@string/select_category"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription" />

    <EditText
        android:id="@+id/editTextJobLocation"
        android:layout_width="363dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Ubicación del empleo"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextSalary"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="244dp"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Salario"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextJobLocation" />

    <Button
        android:id="@+id/buttonCreateJob"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="@color/colorAccept"
        android:padding="12dp"
        android:text="Crear una oferta de empleo"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

    <Button
        android:id="@+id/buttonCancelCreateJob"
        android:layout_width="258dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorCancel"
        android:padding="12dp"
        android:text="Cancelar"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateJob" />

</androidx.constraintlayout.widget.ConstraintLayout>
